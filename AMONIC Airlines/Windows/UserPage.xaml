<Page x:Class="AMONIC_Airlines.Windows.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AMONIC_Airlines.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage" Height="350" Width="480">

    <Grid Background="#FFFACB">
        <Menu Background="#F79420"  HorizontalAlignment="Left" Height="35" Margin="0,2,0,0" VerticalAlignment="Top" Width="475">
            <Button Content="Exit" Background="#196AA6" Foreground="White"  BorderBrush="#196AA6"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="85" Height="25" Click="Button_Click"/>

        </Menu>
        <Label Name="Hello" Content="Label" HorizontalAlignment="Left" Margin="34,53,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="TimeInSystem" HorizontalAlignment="Left" Margin="118,82,0,0" TextWrapping="Wrap" Text="Time spent on system: 0:0:0" VerticalAlignment="Top" Width="172"/>
        <TextBlock Name="HowMuchCrash" HorizontalAlignment="Left" Margin="330,80,0,0" TextWrapping="Wrap" Text="Number of crashes:   0" VerticalAlignment="Top" Width="134"/>
    </Grid>
</Page>
